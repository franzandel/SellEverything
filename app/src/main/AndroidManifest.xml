<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.franzandel.selleverything">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.franzandel.selleverything.features.paymentsuccess.presentation.PaymentSuccessActivity" />
        <activity android:name="com.franzandel.selleverything.features.payment.presentation.PaymentActivity" />
        <activity android:name="com.franzandel.selleverything.features.shipping.presentation.ShippingActivity" />
        <activity android:name="com.franzandel.selleverything.features.detail.presentation.DetailActivity" />
        <activity android:name="com.franzandel.selleverything.features.cart.presentation.CartActivity" />
        <activity android:name="com.franzandel.selleverything.features.home.presentation.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>